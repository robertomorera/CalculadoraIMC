<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.roberto.calculadoraimc.MainActivity"
    android:weightSum="1"
    android:background="@color/colorPrimary"
    android:animateLayoutChanges="false"
    android:backgroundTintMode="multiply">

    <TextView
        android:text="@string/peso"
        android:id="@+id/literal_peso"
        android:fontFamily="serif"
        style="none"
        android:textSize="17sp"
        android:layout_width="120dp"
        android:textColor="@android:color/background_light"
        android:textColorHighlight="@android:color/holo_orange_light"
        android:textColorHint="@android:color/holo_orange_light"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="46dp" />

    <TextView
        android:text="@string/estatura"
        android:id="@+id/literal_estatura"
        android:fontFamily="serif"
        android:textSize="17sp"
        android:layout_width="wrap_content"
        android:textColor="@android:color/background_light"
        android:textColorHighlight="@android:color/holo_orange_light"
        android:textColorHint="@android:color/holo_orange_light"
        style="none"
        android:layout_height="wrap_content"
        android:layout_below="@+id/caja_peso"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="76dp" />

    <Button
        android:text="@string/texto_botonIMC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/boton_calcula_IMC"
        android:fontFamily="serif"
        android:textSize="18sp"
        android:layout_below="@+id/literal_estatura"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="89dp" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/caja_estatura"
        android:layout_above="@+id/boton_calcula_IMC"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="@android:color/background_light" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:ems="10"
        android:id="@+id/caja_peso"
        android:inputType="numberDecimal"
        android:layout_alignBottom="@+id/literal_peso"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="@android:color/background_light" />

</RelativeLayout>
